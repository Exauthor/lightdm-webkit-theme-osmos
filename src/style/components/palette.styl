.palette-blocks
  display grid
  grid-template-columns repeat(auto-fit, minmax(100px, 1fr))
  gap 8px

.palette-block
  display flex
  height 50px
  max-width 200px
  border-radius 8px
  overflow hidden
  position relative
  &::before
    content ''
    display block
    width 100%
    height 100%
    background rgba(0, 0, 0, .4)
    transition background .2s
    position absolute
  &:hover::before, &.active::before
    background rgba(0, 0, 0, 0)

.palette-block-color
  flex 1
  height 100%