.login-transition
  width 100%
  height 100vh
  position relative

.login-view
  --login-width 330px
  padding 12px
  // overflow hidden
  position absolute 
  border-radius 20px
  background rgba(0, 0, 0, .4)
  display flex
  flex-direction column
  transition .25s
  width var(--login-width)
  min-width var(--login-width)
  height 230px
  &.login-view--center
    left 50%
    top 50%
    transform translate(-50%, -50%)
  &.login-view--top
    top 12px
    left 50%
    transform translate(-50%, 0%)
  &.login-view--right
    right 12px
    top 50%
    transform translate(0%, -50%)
  &.login-view--bottom
    top calc(100vh - 230px - 12px)
    left 50%
    transform translate(-50%, 0%)
  &.login-view--left
    left 12px
    top 50%
    transform translate(0%, -50%)

.login-empty-title
  position absolute
  bottom 20px
  left 50%
  transform translateX(-50%)
  font-weight 200
  font-size 2rem
  opacity 0.7

.login-content-settings
  .login-view
    left 50%
    top 50%
    transform translate(-50%, -50%)
    height 50vmin
    width 80vmin
  .settings-button
    opacity 0
    pointer-events none
  .user-choice
    margin-bottom 8px
    .user-avatar, svg
      width 60px
      height 60px
      transform translateX(0)
      margin-bottom 0px
    .user-name
      transform translate(82px, -60px)
      left 0

.user-choice
  margin-bottom 45px
  svg
    width 50px
    height 50px

.user-avatar, .user-choice svg
  border-radius 50%
  width 120px
  height 120px
  transition .3s
  transform translateX(calc(var(--login-width) / 2 - 60px - 12px)) // half login width - half avatar width - half login padding
  background-repeat no-repeat
  background-size cover
  background-position center

.user-choice svg
  height 110px

.user-name
  color white
  width fit-content
  position absolute
  font-size 1.2rem
  margin-top 15px
  transition .3s
  left 50%
  transform translateX(-50%)

.user-input
  display flex
  align-items center
  margin-top 6px
  input
    background none
    padding 5px 12px
    color white
    margin 0 8px
    border 1px var(--color-unfocus) solid
    transition .15s border
    border-radius 5px
    line-height 25px
    width 100%
    &:focus
      outline none
      border-color var(--color-active)
    &::placeholder
      color white
      opacity .45

.user-input-login
  border-radius 50%
  flex-shrink 0
  padding 0
  background none
  border none
  transition .2s

.empty-button, .settings-button, .desktop-icon, .user-input-login, .system-icon
  width 25px
  min-width 25px
  height 25px
  cursor pointer
  fill var(--color-unfocus)
  transition .15s
  &:focus
    outline none
  &:hover
    fill white
  svg
    transition .15s

.settings-button, .desktop-icon, .system-icon
  padding 0
  z-index 2
  border 0
  position absolute
  background none
  border-radius 5px
  border 1px solid transparent
  
.settings-button
  left 12px
  bottom 16px

.system-icon
  right 12px
  top 12px

.desktop-icon
  top 12px
  left 12px
