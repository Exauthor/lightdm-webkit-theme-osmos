.selector
  padding 4px 8px
  border-radius 4px
  border 1px solid var(--color-unfocus)
  color var(--color-unfocus)
  display flex
  align-items center
  justify-content space-between
  cursor pointer
  &.active
    svg
      transform rotate(-90deg)
  svg
    fill var(--color-unfocus)
    transform rotate(90deg)
    transition .2s transform


.selector-label
  font-size 1rem
  font-weight 300