.title
  font-size 1.5rem
  font-weight 300
  text-transform capitalize

.center-position
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.mb-3
  margin-bottom 12px

.mr-2
  margin-right 8px

.flex-1
  flex 1

.position-center
  position: absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)

.wrapper
  width calc(var(--size-article-block) * 3)
  margin 0 auto

.router-anim-enter-active
  animation: coming .4s;
  opacity: 0;

.router-anim-leave-active 
  animation going .4s

.container 
  margin 0 auto
  min-height 100vh

.d-flex
  display flex

.ai-center
  align-items center

.w-100
  width 100%

