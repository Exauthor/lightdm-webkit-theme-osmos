.login-transition
  width 100%
  height 100vh
  position relative

.login-view
  padding 12px
  overflow hidden
  position absolute 
  left 50%
  top 50%
  transform translate(-50%, -50%)
  border-radius 20px
  background rgba(0, 0, 0, .4)
  backdrop-filter blur(10px)
  display flex
  flex-direction column
  transition .25s
  width 30vmin
  height 230px

.login-empty-title
  position absolute
  bottom 20px
  left 50%
  transform translateX(-50%)
  font-size 2rem
  opacity 0.7

.login-content-settings
  .login-view
    height 50vmin
    width 80vmin
  .user-choice
    margin-bottom 8px
    .user-avatar
      width 60px
      height 60px
      transform none
      margin-bottom 0px
    .user-name
      transform translate(82px, -60px)
      left 0

.user-choice
  margin-bottom 45px

.user-avatar
  border-radius 50%
  transition .25s
  width 120px
  height 120px
  transform translateX(70px)
  background-repeat no-repeat
  background-size cover
  background-position center

.user-name
  color white
  width fit-content
  position absolute
  font-size 1.2rem
  margin-top 15px
  transition .3s
  left 50%
  transform translateX(-50%)

.user-input
  display flex
  align-items center
  margin-top 6px
  input
    background none
    padding 5px 12px
    color white
    border 1px white solid
    border-radius 5px
    line-height 25px
    width 100%
    // &.error
    //   border-color red
    //   color red
    &:focus
      outline none
    &::placeholder
      color white
      opacity .45

.user-input-login
  width 30px
  height 30px
  border-radius 50%
  flex-shrink 0
  background rgba(255, 255, 255, .5)
  margin-left 10px
  border none
  transition .2s
  &:focus
    outline none
    background white


.settings-button
  width 35px
  height 35px
  bottom 10px
  left 10px
  position absolute
  padding 5px
  border 0
  background none
  border-radius 5px
  border 1px solid transparent
  transition .15s
  &:focus
    outline none
    border 1px solid white
    svg
      fill white
  svg
    transition .15s
    fill rgba(255, 255, 255, .5)
